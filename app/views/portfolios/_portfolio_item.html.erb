<p><%= portfolio_item.title %></p>

<p><%= portfolio_item.subtitle %></p>

<p><%= portfolio_item.body %></p>

<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>

<%= link_to "Edit Item", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
<%= link_to "Ver", portfolio_show_path(portfolio_item) %>
<%= link_to "Apagar", portfolio_path(portfolio_item), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %>