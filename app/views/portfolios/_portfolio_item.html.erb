
<div class="col-md-4">
    <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
        <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
        <div class="card-body">
            <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
            <p class="card-text"><%= portfolio_item.subtitle %></p>
        </div>
    </div>
</div>